<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:id="@+id/main"
  android:padding="16dp">
  
  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/topBar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/topbar_gradient"
    android:elevation="6dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">
    
    <!-- 좌측 로고 버튼 -->
    <ImageView
      android:id="@+id/btn_detail"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/circle_button_translucent"
      android:clickable="true"
      android:focusable="true"
      android:padding="6dp"
      android:src="@drawable/ic_logo1"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
    
    <!-- 중앙 제목 -->
    <TextView
      android:id="@+id/tvTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:shadowColor="#55000000"
      android:shadowDx="0"
      android:shadowDy="2"
      android:shadowRadius="4"
      android:text="Fork &amp; Wave"
      android:textColor="@color/text_primary_pastel"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
    
    <!-- 우측 검색 버튼 -->
    <ImageView
      android:id="@+id/btn_search"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/circle_button_shadow"
      android:clickable="true"
      android:focusable="true"
      android:padding="6dp"
      android:src="@drawable/ic_search"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  
  </androidx.constraintlayout.widget.ConstraintLayout>
  
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:background="#efefef"
    android:gravity="center_vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_marginTop="16dp"
    >
    
    <ImageView
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:src="@drawable/ic_search"
      android:contentDescription="검색 아이콘"
      android:padding="6dp" />
    
    <EditText
      android:id="@+id/searchEditText"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="1"
      android:hint="검색어를 입력하세요"
      android:background="@android:color/transparent"
      android:paddingRight="10dp"
      android:paddingLeft="10dp"
      android:inputType="text"
      android:textSize="14sp" />
  
  </LinearLayout>
  
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    
    <Spinner
      android:id="@+id/selectSpinner"
      android:layout_width="match_parent"
      android:layout_height="48dp" />
  </LinearLayout>
  
  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/searchView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:clipToPadding="false"
    android:background="#ffffff"/>
  
  
  <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottomNavigationView"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_gravity="bottom"
    android:background="#CCFFFFFF"
    android:clipToPadding="false"
    android:elevation="0dp"
    android:fitsSystemWindows="true"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:stateListAnimator="@null"
    android:translationY="20dp"
    app:itemIconPadding="8dp"
    app:itemIconSize="28dp"
    app:itemIconTint="@color/nav_item_selector_pastel"
    app:itemTextAppearanceActive="@style/BottomNavTextActiveCustom"
    app:itemTextAppearanceInactive="@style/BottomNavTextInactiveCustom"
    app:itemTextColor="@color/nav_item_selector_pastel"
    app:labelVisibilityMode="labeled"
    app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
    app:menu="@menu/bottom_nav_menu"
    />
</LinearLayout>