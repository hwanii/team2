<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 최상위 CoordinatorLayout: 상단바, 스크롤, 바텀 네비 포함 -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_pastel">

        <include
            android:id="@+id/top_bar"
            layout="@layout/top_bar"/>

        <!-- ====================
             스크롤 영역 (메인 컨텐츠)
             ==================== -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingBottom="72dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- ====================
                     상단 이미지 슬라이더
                     ViewPager2 + FrameLayout
                     ==================== -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

                <!-- ====================
                     대표 메뉴 섹션
                     ==================== -->
                <TextView
                    android:id="@+id/tvHorizontalTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:drawablePadding="6dp"
                    android:letterSpacing="0.02"
                    android:paddingStart="12dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:text="🍜 부산 대표 메뉴"
                    android:textColor="@color/text_primary_pastel"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <!-- Horizontal RecyclerView (대표 메뉴) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/horizontalRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />

                <!-- ====================
                     감성 카페 섹션
                     ==================== -->
                <TextView
                    android:id="@+id/tvHorizontalTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:drawablePadding="6dp"
                    android:letterSpacing="0.02"
                    android:paddingStart="12dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:text="☕ 인스타 감성 가득"
                    android:textColor="@color/text_primary_pastel"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <!-- Horizontal RecyclerView (감성 카페) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/horizontalRecyclerView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />

                <!-- ====================
                     지역별 맛집 섹션 제목
                     ==================== -->
                <TextView
                    android:id="@+id/tvVerticalTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:letterSpacing="0.02"
                    android:paddingStart="12dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:text="📍 구석구석 "
                    android:textColor="@color/text_primary_pastel"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- ====================
                     구 선택 버튼 영역
                     HorizontalScrollView + LinearLayout
                     ==================== -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/guFilterLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <!-- Vertical RecyclerView (지역별 맛집 리스트) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/verticalRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- ====================
             로딩 표시용 ProgressBar
             ==================== -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <include
            android:id="@+id/bottom_nav"
            layout="@layout/activity_base"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
