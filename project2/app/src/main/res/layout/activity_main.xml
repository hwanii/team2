<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 최상위 CoordinatorLayout: 상단바, 스크롤, 바텀 네비 포함 -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_pastel">

        <!-- ====================
             상단바 (로고, 제목, 검색 버튼)
             ==================== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/topbar_gradient"
            android:elevation="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- 좌측 로고 버튼 -->
            <ImageView
                android:id="@+id/btn_detail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_button_translucent"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp"
                android:src="@drawable/ic_logo1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 중앙 제목 -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowColor="#55000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:text="Fork &amp; Wave"
                android:textColor="@color/text_primary_pastel"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 우측 검색 버튼 -->
            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_button_shadow"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp"
                android:src="@drawable/ic_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ====================
             스크롤 영역 (메인 컨텐츠)
             ==================== -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingBottom="72dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- ====================
                     상단 이미지 슬라이더
                     ViewPager2 + FrameLayout
                     ==================== -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

                <!-- ====================
                     대표 메뉴 섹션
                     ==================== -->
                <TextView
                    android:id="@+id/tvHorizontalTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:drawablePadding="6dp"
                    android:letterSpacing="0.02"
                    android:paddingStart="12dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:text="🍜 부산 대표 메뉴"
                    android:textColor="@color/text_primary_pastel"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/pastel_accent" />

                <!-- Horizontal RecyclerView (대표 메뉴) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/horizontalRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />

                <!-- ====================
                     감성 카페 섹션
                     ==================== -->
                <TextView
                    android:id="@+id/tvHorizontalTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:drawablePadding="6dp"
                    android:letterSpacing="0.02"
                    android:paddingStart="12dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:text="☕ 인스타 감성 가득"
                    android:textColor="@color/text_primary_pastel"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/pastel_accent" />

                <!-- Horizontal RecyclerView (감성 카페) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/horizontalRecyclerView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />

                <!-- ====================
                     지역별 맛집 섹션 제목
                     ==================== -->
                <TextView
                    android:id="@+id/tvVerticalTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:letterSpacing="0.02"
                    android:paddingStart="12dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:text="📍 구석구석 "
                    android:textColor="@color/text_primary_pastel"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- ====================
                     구 선택 버튼 영역
                     HorizontalScrollView + LinearLayout
                     ==================== -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/guFilterLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <!-- Vertical RecyclerView (지역별 맛집 리스트) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/verticalRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- ====================
             로딩 표시용 ProgressBar
             ==================== -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- ====================
             바텀 네비게이션
             메뉴: 홈, 리스트, 즐겨찾기, 프로필
             ==================== -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#80FFFFFF"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            app:itemIconPadding="0dp"
            app:itemIconSize="30dp"
            app:itemIconTint="@color/nav_item_selector_pastel"
            app:itemTextAppearanceActive="@style/BottomNavTextActiveCustom"
            app:itemTextAppearanceInactive="@style/BottomNavTextInactiveCustom"
            app:itemTextColor="@color/nav_item_selector_pastel"
            app:labelVisibilityMode="labeled"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
            app:menu="@menu/bottom_nav_menu" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
