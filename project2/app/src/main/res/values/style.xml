<resources>


    <!-- 활성 상태 -->
    <style name="BottomNavTextActiveCustom" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <!-- <item name="android:lineHeight">14sp</item> 제거 -->
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">60dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 비활성 상태 -->
    <style name="BottomNavTextInactiveCustom" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <!-- <item name="android:lineHeight">14sp</item> 제거 -->
        <item name="android:textColor">@color/gray</item>
        <item name="android:paddingTop">60dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RoundedBottomNav" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- 버튼 배경 스타일 정의 -->
    <style name="btn_bg" parent="Widget.MaterialComponents.Button">
        <!-- 버튼 배경 색상 -->
        <item name="android:backgroundTint">@color/black</item>
        <!-- 버튼 글자 색상 -->
        <item name="android:textColor">@color/white</item>
        <!-- 버튼 글자 크기 -->
        <item name="android:textSize">14sp</item>
        <!-- 버튼 안쪽 여백 -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <!-- 모서리 둥글게 만들기 -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <!-- Material Button 기본 스타일 상속으로 그림자 등 유지 -->
    </style>
    
    
    <style name="FilterOffButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="strokeColor">@color/stroke_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="FilterOnButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="strokeColor">@color/stroke_orange</item>
        <item name="android:backgroundTint">@color/light_orange</item>
        <item name="android:textColor">@color/stroke_orange</item>
    </style>


    
    <style name="arrowBack">
        <item name="minWidth">0dp</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="strokeColor">@color/line</item>
    </style>
    
    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>
